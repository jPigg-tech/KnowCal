@model CalorieTracker.Models.Emailmodel

@{
    ViewData["Title"] = "SendgridEmailSubmit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>KnowCal</h1>

<h4>Subscribe to KnowCal's Message Board!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendgridEmailSubmit">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input type="submit" value="Add Me" class="btn btn-primary" asp-action="SendgridEmailSubmit2"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
