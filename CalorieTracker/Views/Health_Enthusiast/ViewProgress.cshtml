@model CalorieTracker.Models.FoodDiary

@{
    ViewData["Title"] = "ViewProgress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Visualizing Your Progress</h1>

<div class="text-left">
    <p> </p>
    <p> </p>
    
</div>

<div class="text-left">
    <p> </p>
    <p>This first chart a bar chart comparing your initial calorie intake<p>
    <p>to today's calorie intake and KnowCal's recomendation for calorie intake!</p>
</div>

<div class="center">
    <div class="chart-container" style="position: relative; height:40vh; width:80vh">
        <canvas id="myChart"></canvas>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script>

    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Initial Cals', 'Today', 'Recommended'],
            datasets: [{
                label: 'Number of Calories',
                data: [@ViewBag.Initial, @ViewBag.Five, @ViewBag.Goal],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }

        }
    });
    </script>
</div>

<div class="text-left">
    <p> </p>
    <p>The second chart is a pie chart showing the different<p>
    <p>calorie amounts you consumed today per meal and snacks! </p>
</div>


    <div class="chart-container" style="position: relative; height:50vh; width:100vw">
        <canvas id="myChart2"></canvas>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script>

    var ctx = document.getElementById('myChart2').getContext('2d');
    var myChart2 = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Breakfast', 'Lunch', 'Dinner', 'Snacks'],
            datasets: [{
                label: 'Number of Calories',
                data: [@ViewBag.One, @ViewBag.Two, @ViewBag.Three, @ViewBag.Four],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    </script>

    <div class="text-left">
        <p>The third and final chart is a line chart showing the different<p>
        <p>days of the week and how many calories you have taken in on those days.</p>
    </div>

    <div class="chart-container" style="position: relative; height:50vh; width:100vw">
        <canvas id="myChart3"></canvas>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script>

    var ctx = document.getElementById('myChart3').getContext('2d');
    var myChart3 = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['@ViewBag.dates[0]', '@ViewBag.dates[1]', '@ViewBag.dates[2]', 'Today'],
            datasets: [{
                label: 'Number of Calories',
                data: [@ViewBag.Day1, @ViewBag.Day2, @ViewBag.Day3, @ViewBag.Five],
                backgroundColor:
                [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor:
                [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            scales: {


                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    </script>






    


