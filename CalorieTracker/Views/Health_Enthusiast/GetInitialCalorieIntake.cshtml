@model IEnumerable<CalorieTracker.Models.InitialCalorieIntakeList>

@{
    ViewData["Title"] = "GetInitialCalorieIntake";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetInitialCalorieIntake</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                <a asp-action="AddInitialCalorieIntake" asp-route-id="@item.Id">Add</a>                
            </td>
        </tr>
}
    </tbody>
</table>
