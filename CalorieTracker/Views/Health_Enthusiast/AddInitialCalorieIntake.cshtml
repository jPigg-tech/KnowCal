@model CalorieTracker.Models.Health_Enthusiast

@{
    ViewData["Title"] = "AddInitialCalorieIntake";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Registration </h1>

<p>Click "Add" to register your food item from the previous screen and then add another!</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddInitialCalorieIntake">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
